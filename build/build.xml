<?xml version="1.0" encoding="UTF-8"?>
	<project name="codeScatch" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jvxfx-1.0">
				<filename name="jvxfx.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-labs-8.0-r4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-window-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/antlr-4.5.3">
				<filename name="antlr-4.5.3-complete.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/rsyntaxtextarea-2.5.7">
				<filename name="rsyntaxtextarea-2.5.7.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-controls-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-menu-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-fxml-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/miglayout-5.1">
				<filename name="miglayout-core-5.1-20160416.220029-387.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/miglayout-5.1">
				<filename name="miglayout-swing-5.1-20160419.220020-390.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch/libs/jfxtras">
				<filename name="jfxtras-common-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/Users/newmacpro/Documents/workspace/codeScatch">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="miglayout-core-5.1-20160416.220029-387.jar"/>
				<include name="jfxtras-menu-8.0-r5-SNAPSHOT.jar"/>
				<include name="jfxtras-labs-8.0-r4.jar"/>
				<include name="jvxfx.jar"/>
				<include name="jfxtras-fxml-8.0-r5-SNAPSHOT.jar"/>
				<include name="jfxtras-controls-8.0-r5-SNAPSHOT.jar"/>
				<include name="rsyntaxtextarea-2.5.7.jar"/>
				<include name="jfxtras-window-8.0-r5-SNAPSHOT.jar"/>
				<include name="antlr-4.5.3-complete.jar"/>
				<include name="miglayout-swing-5.1-20160419.220020-390.jar"/>
				<include name="jfxtras-common-8.0-r5-SNAPSHOT.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="codeScatch.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="codeScratch"
			mainClass="application.CodeScatchFX"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/codeScatch.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="capstone"/>
				<attribute name="Implementation-Title" value="codeScratch"/>
				<attribute name="Implementation-Version" value="0.2 rev"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="true"
			extension="false"
			width="900" height="600"
			includeDT="true"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="codeScatch" 
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="codeScatch" vendor="capstone"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
	
	<target name="package-for-store" depends="do-deploy">

        <!-- Change the value of this property to be the name of your JAR,
             minus the .jar extension. It should not have spaces.
             <property name="store.jar.name" value="MyJarName"/>
        -->
        <property name="store.jar.name" value="codeScatch"/>


        <!-- don't edit below this line -->

        <property name="store.dir" value="store"/>
        <property name="store.jar" value="${store.dir}/${store.jar.name}.jar"/>

        <echo message="Packaging ${application.title} into a single JAR at ${store.jar}"/>

        <delete dir="store"/>
        <mkdir dir="store"/>

        <jar destfile="${store.dir}/temp_final.jar" filesetmanifest="skip">
            <zipgroupfileset dir="dist" includes="*.jar"/>
            <zipgroupfileset dir="dist/libs" includes="*.jar"/>

            <manifest>
                <attribute name="Main-Class" value="application.CodeScatchFX"/>
            </manifest>
        </jar>

        <zip destfile="${store.jar}">
            <zipfileset src="${store.dir}/temp_final.jar"
            excludes="META-INF/*.SF, META-INF/*.DSA, META-INF/*.RSA"/>
        </zip>

        <delete file="${store.dir}/temp_final.jar"/>

    </target>
</project>
